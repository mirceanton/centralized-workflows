{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"packageRules": [
		// ========================================================================================
		// Update Type Labels
		// ========================================================================================
		{
			"matchUpdateTypes": [
				"major"
			],
			"labels": [
				"type/major"
			]
		},
		{
			"matchUpdateTypes": [
				"minor"
			],
			"labels": [
				"type/minor"
			]
		},
		{
			"matchUpdateTypes": [
				"patch"
			],
			"labels": [
				"type/patch"
			]
		},
		// ========================================================================================
		// Datasource Labels
		// ========================================================================================
		{
			"matchDatasources": [
				"docker"
			],
			"addLabels": [
				"renovate/container"
			]
		},
		{
			"matchDatasources": [
				"gomod"
			],
			"addLabels": [
				"renovate/go"
			]
		},
		{
			"matchManagers": [
				"github-actions"
			],
			"addLabels": [
				"renovate/github-action"
			]
		}
	]
}